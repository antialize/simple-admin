{
    "compilerOptions": {
        "outDir": "./public/js/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "useDefineForClassFields": true,
	"strict": true,
        "lib": [
            "es6",
            "dom"
        ]
    },
    "include": [
        "./src/**/*"
    ]
}
